<Project>
	<!-- general build properties -->
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<RootNamespace>Basilisque.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
		<AssemblyName Condition="$(MSBuildProjectName.EndsWith('.Benchmarks'))!='true'">Basilisque.$(MSBuildProjectName)</AssemblyName>
		<Nullable>enable</Nullable>
		<ImplicitUsings>disable</ImplicitUsings>
	</PropertyGroup>

	<!-- NuGet package properties and project info -->
	<PropertyGroup>
		<Authors>Alexander Stärk</Authors>
		<VersionPrefix>0.2.12</VersionPrefix>
		<AssemblyVersion>$(VersionPrefix).0</AssemblyVersion>
		<NeutralLanguage>en-US</NeutralLanguage>
		
		<Title>$(AssemblyName)</Title>
		<Company>$(Authors)</Company>
		<Product>$(AssemblyName)</Product>
		<Copyright>Copyright © $([System.DateTime]::Now.ToString(yyyy)) $(Company)</Copyright>
		<PackageId>$(AssemblyName)</PackageId>
		<VersionSuffix Condition=" $(TF_BUILD)!='true' ">alpha</VersionSuffix>
		<FileVersion>$(AssemblyVersion)</FileVersion>
		<InformationalVersion>$(AssemblyVersion)</InformationalVersion>

		<!--<PackageLicenseUrl></PackageLicenseUrl>-->
		<!--<PackageRequireLicenseAcceptance></PackageRequireLicenseAcceptance>-->
		<PackageProjectUrl>https://github.com/basilisque-framework/CodeAnalysis</PackageProjectUrl>
		<PackageTags>CodeAnalysis CSharp CodeGeneration Compiler Compilation Syntax</PackageTags>
		<PackageReleaseNotes>- </PackageReleaseNotes>
		<!--<PackageIconUrl>http://www.url.de/nuget_icon.png</PackageIconUrl>-->

		<IsPackable Condition="$(Configuration)!='Release'">false</IsPackable>
	</PropertyGroup>

	<!-- XML documentation -->
	<PropertyGroup Condition="$(MSBuildProjectName.EndsWith('.Tests'))!='true' AND $(MSBuildProjectName.EndsWith('.Benchmarks'))!='true'">
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<!-- global usings -->
	<ItemGroup>
		<Using Include="System" />
		<Using Include="System.Collections.Generic" />
		<Using Include="System.Linq" />
		<Using Include="System.Threading.Tasks" />
		<Using Include="Microsoft.CodeAnalysis" />
	</ItemGroup>
</Project>