<Project>
	<!-- set BAS_CB_ProjType_CodeAnalysis to true -->
	<PropertyGroup Condition="'$(MSBuildProjectName)' == 'CodeAnalysis'">
		<BAS_CB_ProjType_CodeAnalysis>true</BAS_CB_ProjType_CodeAnalysis>
		<BAS_CB_Set_IncludeBuildOutput>false</BAS_CB_Set_IncludeBuildOutput>
		<BAS_CB_CodeAnalysis_PackCS>false</BAS_CB_CodeAnalysis_PackCS>
	</PropertyGroup>
	
	<!-- general build properties -->
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0</TargetFrameworks>
	</PropertyGroup>

	<!-- NuGet package properties and project info -->
	<PropertyGroup>
		<BAS_CB_Copyright_BeginYear>2022</BAS_CB_Copyright_BeginYear>
		<PackageProjectUrl>https://github.com/basilisque-framework/CodeAnalysis</PackageProjectUrl>
		<PackageTags>CodeAnalysis CSharp CodeGeneration Compiler Compilation Syntax</PackageTags>
		<!--<PackageIconUrl>http://www.url.de/nuget_icon.png</PackageIconUrl>-->
		<PackageReadmeFile>docs\README.md</PackageReadmeFile>
	</PropertyGroup>

	<!-- Pack README -->
	<ItemGroup>
		<None Include="..\..\README.md" Pack="true" PackagePath="docs"/>
	</ItemGroup>

	<!-- global usings -->
	<ItemGroup>
		<Using Include="Microsoft.CodeAnalysis" />
	</ItemGroup>


	<!-- publish all target frameworks if target framework is unspecified -->
	<Target Name="PublishProjectIfFrameworkSet" DependsOnTargets="Publish" Condition=" '$(TargetFramework)' != '' " />

	<Target Name="PublishProjectForAllFrameworksIfFrameworkUnset" Condition=" '$(TargetFramework)' == '' ">
		<ItemGroup>
			<BAS_PublishFramework Include="$(TargetFrameworks)" />
		</ItemGroup>
		<MSBuild Projects="$(MSBuildProjectFile)" Targets="Publish" Properties="TargetFramework=%(BAS_PublishFramework.Identity)" />
	</Target>

	<Target Name="PublishAll" DependsOnTargets="PublishProjectIfFrameworkSet;PublishProjectForAllFrameworksIfFrameworkUnset" />
</Project>